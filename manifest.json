{
  "manifest_version": 2,
  "name": "slamtracker",
  "version": "1.2.1",
  "description": "Roland Garros, Wimbledon, US Open and AUSOpen slamtracker",
  "background": {
    "scripts": ["js/ctxmenu.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/jquery-1.11.1.min.js"]
    }
   ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "http://*/*", "https://*/*"
  ],
   "icons": {
      "48": "images/appicon.png",
      "32": "images/appicon.png",
      "16": "images/appicon.png"
   }
}
